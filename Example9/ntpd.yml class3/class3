- hosts: all
  tasks:
  - name: Update chronyd conf
    lineinfile:
      path: /etc/chrony.conf
      regexp: "^server"
      line: "server pool.company.com iburst"

  - name: Remove unneccary lines from chronyd conf
    lineinfile:
      path: /etc/chrony.conf
      regexp: "^server  [0-3]"
      state: absent
